{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "paths": {
      "@UILibrary": ["./renderer/UILibrary"],
      "@customTypes/*": ["./renderer/types/*"],
      "@constants/*": ["./renderer/constants/*"],
      "@actions/*": ["./renderer/actions/*"],
      "@reducers/*": ["./renderer/reducers/*"],
      "@contexts/*": ["./renderer/contexts/*"],
      "@hooks/*": ["./renderer/hooks/*"]
    }
  },
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"]
}
